def build(bld):
    libs = 'BOOST EIGEN'
    cxxflags = bld.get_env()['CXXFLAGS']

    bld.program(features='cxx test',
                source='test_nn.cpp',
                includes='..',
                target='test_nn',
                uselib=libs,
                cxxflags = cxxflags)

    bld.program(features='cxx test',
                source='test_loss.cpp',
                includes='..',
                target='test_loss',
                uselib=libs,
                cxxflags = cxxflags)

    bld.program(features='cxx test',
                source='test_activation.cpp',
                includes='..',
                target='test_activation',
                uselib=libs,
                cxxflags = cxxflags)

